{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "model",
  "type": "object",
  "required": [
    "id",
    "name",
    "capabilities",
    "msr",
    "description",
    "variabledim",
    "al",
    "shocks",
    "vars"
  ],
  "additionalProperties": false,
  "if": {
    "properties": {
      "al": {
        "const": true
      }
    }
  },
  "then": {
    "required": [
      "al_info"
    ]
  },
  "properties": {
    "$schema": {
      "type": "string"
    },
    "id": {
      "type": "integer"
    },
    "name": {
      "type": "string"
    },
    "al": {
      "type": "boolean"
    },
    "al_info": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "forwards": {
          "$ref": "common#/definitions/arrayOfStrings"
        },
        "states_long": {
          "$ref": "common#/definitions/arrayOfStrings"
        },
        "states_short": {
          "$ref": "common#/definitions/arrayOfStrings"
        }
      }
    },
    "variabledim": {
      "enum": [
        1,
        2
      ]
    },
    "msr": {
      "anyOf": [
        {
          "$ref": "common#/definitions/arrayOfCoefficients"
        },
        {
          "type": "null"
        }
      ]
    },
    "shocks": {
      "$ref": "common#/definitions/arrayOfStrings"
    },
    "vars": {
      "$ref": "common#/definitions/arrayOfStrings"
    },
    "capabilities": {
      "type": "object",
      "required": [
        "interest",
        "inflation",
        "outputgap",
        "output",
        "mp_shock",
        "fiscal_shock"
      ],
      "properties": {
        "interest": {
          "type": "boolean"
        },
        "inflation": {
          "type": "boolean"
        },
        "outputgap": {
          "type": "boolean"
        },
        "output": {
          "type": "boolean"
        },
        "mp_shock": {
          "type": "boolean"
        },
        "fiscal_shock": {
          "type": "boolean"
        }
      }
    },
    "description": {
      "$ref": "common#/definitions/description"
    }
  }
}
